<div>
    {{#if user}}
        {{#if isAdmin}}
            <form class="new_product-form" action="/api/products" method="POST"> 
                <p class="sub_title">Add New Product - <span class="text-muted">Only <u><i>admin</i></u> or <u><i>premium</i></u> users.</span></p>
                <input type="text" name="title" placeholder="Titulo" />
                <input type="text" name="description" placeholder="Description" />
                <input type="number" name="price" placeholder="Price" />
                <input type="text" name="category" placeholder="Category" />
                <input type="text" name="code" placeholder="Code" />
                <input type="number" name="stock" placeholder="Stock" />
                <input type="url" name="thumbnail" placeholder="Img Url" />
                <input type="text" name="owner" placeholder="User ID: {{user._id}}" value={{user._id}}/>
                <button class="btn btn-info" id="send-btn" >Send New Prod</button>
            </form>
        {{/if}}
    {{/if}}
</div>