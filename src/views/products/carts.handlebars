<main>
    {{#if user}}
        <h1 class="title"><b style="color: #ffb76b">{{user.first_name}}</b>, this is your cart so far.</h1>

        <section class="container">
            <table class="table table-light table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Go to Detail</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each result}}
                        {{#each products}}
                            <tr>
                                <td><img width="60" src="{{this.product.thumbnail}}"></td>
                                <th scope="row">{{this.product.description}}</th>
                                <td>${{this.product.price}}</td>
                                <td>{{this.quantity}}</td>
                                <td><a href="/products/{{this.product._id}}">Go to Detail</a></td>
                                <td><button class="btn btn-outline-danger" id="delete_btn" value={{this.product._id}}>DELETE</button></td>
                            </tr>
                        {{/each}}
                    {{/each}}
                    <tr class="table--total_row">
                        <td><h4><strong>TOTAL</strong></h4></td>
                        <td> -------------------------------------- </td>
                        <td><h4>$ {{acc}} .-</h4></td>
                        <td> ---------- </td>
                        <td>
                            <button class="btn btn-outline-success" value="{{user.cart._id}}" id="purchase">
                                <a style="none" href="/carts/{{user.cart._id}}/payment">Confirm!</a>
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-outline-danger" id="empty_cart">
                                <a style="none"> Empty Cart!</a>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    {{else}}
        <h1 class="title">Please, login to see your cart.</h1>
    {{/if}}
</main>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/cart.js"></script>